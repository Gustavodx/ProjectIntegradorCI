@model ProyectoPI.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styleRegistro.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                Registrarse
            </div>
            <div class="card-body">
                <form asp-controller="Inicio" asp-action="Registrarse" method="post">
                    <div class="mb-3">
                        <input class="form-control" type="text" placeholder="Nombre" asp-for="Nombre" required />
                    </div>
                    <div class="mb-3">
                        <input class="form-control" type="text" placeholder="Correo" asp-for="Correo" required />
                    </div>
                    <div class="mb-3">
                        <input class="form-control" type="password" placeholder="Contraseña" asp-for="Clave" required />
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" type="submit">Registrar</button>
                    </div>
                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="form-group mt-3">
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        </div>
                    }
                    <p class="mt-3">¿Ya tienes una cuenta? <a class="btn" href="@Url.Action("IniciarSession", "Inicio")">Iniciar Sesión</a></p>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
