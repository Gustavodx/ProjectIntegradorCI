        <script>
            $(document).ready(function () {
                $("#preguntaForm").submit(function (event) {
                event.preventDefault();
                var mensaje = $("#preguntaTextarea").val();

                var data = {
                    Correo:"",
                    Codigo:"",
                    Estado:1,
                    Mensaje: mensaje
                };
                $.ajax({
                    url: "http://apiproyectopi-001-site1.anytempurl.com/api/Api/consultas/NewConsulta",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify(data),
                    success: function (response) {
                        // Manejar la respuesta exitosa aquí
                        console.log("Consulta creada:", response);
                        $("#preguntaTextarea").val("");
                        $("#mensajeRespuesta").text("Consulta creada con éxito. Código: " + response.codigo);
                        $("#mensajeRespuesta").show();
                        setTimeout(function () {
                            $("#mensajeRespuesta").hide();
                        }, 4000);
                    },
                    error: function (error) {
                        // Manejar errores aquí
                        console.error("Error al crear la consulta:", error);
                        // Mostrar algún mensaje de error al usuario si lo deseas
                        alert("Hubo un error al crear la consulta.");
                    }
                });
            });
            });
        </script>

